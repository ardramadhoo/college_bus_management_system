<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buses</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js">

    <!-- For navbar collapse -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="../../css/admin/bus.css">

    <!-- Gfonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&family=Roboto:wght@300;400&display=swap"
        rel="stylesheet">
    <!-- SweetAlert -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</head>

<body>
    <section id="top-container">
        <div class="row">
            <div class="col-lg-6">
                <a href="/"><img src="../../images/nitte.png" alt="" class="nitte_logo"></a>
            </div>

            <div class="col-lg-2">
                <p class="college_bus_contacts">R.O.Office <br>91+123456789</p>
            </div>
            <div class="col-lg-2">
                <p class="college_bus_contacts">Admission Office<br>91+3256727483</p>
            </div>
            <div class="col-lg-2">
                <p class="college_bus_contacts">Email us<br>nitteedu@gmail.in</p>
            </div>
        </div>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav navbar-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="bus">Buses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="adminroutes">Routes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="newreg">New Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="report">Report</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" onclick="logout()">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <!-- Table -->
    <section id="middle-container">
        <h2 style="text-align:center;margin-top:1em;">Buses</h2>
        <div class="row" style="margin:4em;overflow-x:auto;">
            <table>
                <tr>
                    <th>Bus No</th>
                    <th>Bus model</th>
                    <th>Bus driver</th>
                    <th>Bus capacity</th>
                    <th>Route no</th>
                    <th>Status</th>
                </tr>
                <tr>
                    <form action="/admin/bus/add" method="post">
                        <td><input type="text" name="bus_no" placeholder="Bus No.."></td>
                        <td><input type="text" name="bus_model" placeholder="Model.."></td>
                        <td><input type="text" name="bus_driver" placeholder="Driver.."></td>
                        <td><input type="text" name="bus_capacity" placeholder="Capacity.."></td>
                        <td><input type="text" name="route_no" placeholder="Route No.."></td>
                        <td><button type="submit" class="button">Done</button></td>
                    </form>
                </tr>
            </table>
        </div>
        <h2 style="text-align:center;margin-top:1em;">Bus Details</h2>
        <div class="row" style="margin:4em;overflow-x:auto;">
            <table>
                <tr>
                    <th>Bus No</th>
                    <th>Route no</th>
                    <th>Bus capacity</th>
                    <th>Bus driver</th>
                    <th>Bus model</th>
                    <!-- <th>Edit</th> -->
                    <th>Delete</th>
                </tr>
                <% for(var i=0 ;i<data.result.length ;i++){  %> 
                <tr>
                    <form action="/admin/bus/delete/<%= data.result[i].bus_no %>" method="post">
                        <td><%= data.result[i].bus_no %> </td>
                        <td><%= data.result[i].route_no %></td>
                        <td><%= data.result[i].bus_capacity %></td>
                        <td><%= data.result[i].bus_driver %></td>
                        <td><%= data.result[i].bus_model %></td>    
                        <td><button type="submit" class="button" >Delete</button></td>
                    </form>
                </tr>
                <% } %> 
            </table>
        </div>
    </section>
    
    <!-- Footer -->
    <section id="bottom-container" class="footer">
        <div class="row">
            <div class="col-lg-3">
                <img src="../../images/lofilines.png" alt="" class="logo">
            </div>
            <div class="col-lg-3">
            </div>
            <div class="col-lg-3">
            </div>
            <div class="col-lg-3">
                <p class="talk"><strong>Talk to us</strong><br>
                    LofiLines<br>91+6435673858<br>lofilines@gmail.com</p>
            </div>
        </div>
    </section>
    <script type="text/javascript">
        async function logout() {
            swal("You have been successfully logged out")
                .then((result) => {
                    window.location = "/"
                }).catch((err) => {
                    window.location = "/"
                });
        }

    </script>
</body>
</html>