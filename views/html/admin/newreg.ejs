<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Registrations</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js">

    <!-- For navbar collapse -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="../../css/admin/newreg.css">

    <!-- Gfonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&family=Roboto:wght@300;400&display=swap"
        rel="stylesheet">

    <!-- SweetAlert -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>

<body>
    <section id="top-container">
        <div class="row">
            <div class="row">
                <div class="col-lg-6">
                    <a href="/"><img src="../../images/nitte.png" alt="" class="nitte_logo"></a>
                </div>

                <div class="col-lg-2">
                    <p class="college_bus_contacts">R.O.Office <br>91+123456789</p>
                </div>
                <div class="col-lg-2">
                    <p class="college_bus_contacts">Admission Office<br>91+3256727483</p>
                </div>
                <div class="col-lg-2">
                    <p class="college_bus_contacts">Email us<br>nitteedu@gmail.in</p>
                </div>
            </div>

            <nav class="navbar navbar-expand-lg bg-light navbar-white">
                <!-- Toggler/collapsibe Button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav navbar-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="bus">Buses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="adminroutes">Routes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="newreg">New Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="report">Report</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" onclick="logout()">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </section>
    <section id="middle-container">
        <h2 style="text-align:center;margin-top:1em;">New Registrations</h2>
        <br>
        <div class="row" style="margin:2em;overflow-x: auto;overflow-y: auto;max-height: 15em;">
            <table>
                <tr>
                    <th>Pass Id</th>
                    <th>Name</th>
                    <th>USN</th>
                    <th>Designation</th>
                    <th>Bus No.</th>
                    <th>Payment Status</th>
                    <th>Fees</th>
                    <th>Validate</th>
                </tr>
                <% for(var i=(data.result.length)-1 ;i>=0 ;i--) { %>
                    <tr>
                        <form action="/admin/newreg/add/<%= data.result[i].pass_id %>" method="post">
                        <td>
                            <%= data.result[i].pass_id %>
                        </td>
                        <td>
                            <%= data.result[i].Passenger_name %>
                        </td>
                        <td>
                            <%= data.result[i].usn %>
                        </td>
                        <td>
                            <%= data.result[i].designation %>
                        </td>
                        <td>
                            <%= data.result[i].bus_no %>
                        </td>
                        <td>
                            <%= data.result[i].payment_status %>
                        </td>
                        <td>
                            <%= data.result[i].fees %>
                        </td>
                        <td><button type="submit" class="button">Accept</button></td>
                        </form>
                    </tr>
                    <% } %>
            </table>
        </div>
        <h2 style="text-align:center;margin-top:1em;">All Registrations</h2>
        <div class="row" style="margin:2em;overflow-x: auto;overflow-y: auto; max-height: 15em;">
            <table>
                <tr>
                    <th>Pass Id</th>
                    <th>Name</th>
                    <th>USN</th>
                    <th>Designation</th>
                    <th>Bus No.</th>
                    <th>Payment Status</th>
                    <th>Fees</th>
                    <th>Delete</th>
                </tr>
                <% for(var i=0 ;i<data.result.length ;i++) {%>
                    <tr>
                        <form action="/admin/newreg/delete/<%= data.result[i].pass_id %>" method="post">
                            <td>
                                <%= data.result[i].pass_id %>
                            </td>
                            <td>
                                <%= data.result[i].Passenger_name %>
                            </td>
                            <td>
                                <%= data.result[i].usn %>
                            </td>
                            <td>
                                <%= data.result[i].designation %>
                            </td>
                            <td>
                                <%= data.result[i].bus_no%>
                            </td>
                            <td>
                                <%= data.result[i].payment_status %>
                            </td>
                            <td>
                                <%= data.result[i].fees %>
                            </td>
                            <td><button type="submit" class="button">Delete</button></td>
                        </form>
                    </tr>
                    <% } %>
            </table>
        </div>
        <form action="/admin/newreg/semreset" method="post" class="text-center "><button class="btn btn-danger m-4">Semester Reset</button></form>
        <form action="/admin/newreg/deleteset" method="post" class="text-center "><button class="btn btn-danger m-4">Delete all</button></form>

    </section>
    <section id="bottom-container" class="footer">
        <div class="row">
            <div class="col-lg-3">
                <img src="../../images/lofilines.png" alt="" class="logo">
            </div>
            <div class="col-lg-3">
            </div>
            <div class="col-lg-3">
            </div>
            <div class="col-lg-3">
                <p class="talk"><strong>Talk to us</strong><br>
                    LofiLines<br>91+6435673858<br>lofilines@gmail.com</p>
            </div>
        </div>
    </section>
    <script type="text/javascript">
        async function logout() {
            swal("You have been successfully logged out")
                .then((result) => {
                    window.location = "/"
                }).catch((err) => {
                    window.location = "/"
                });
        }
    </script>
</body>

</html>